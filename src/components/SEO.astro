---
/**
 * SEO Component
 * 
 * Generates comprehensive meta tags for SEO, Open Graph, and Twitter Cards.
 * Uses centralized configuration from src/config.ts
 * 
 * @param title - Page title
 * @param description - Page description
 * @param type - Page type (website, article, profile)
 * @param image - Social sharing image URL
 * @param publishDate - Article publish date (for articles)
 * @param updatedDate - Article updated date (for articles)
 * @param canonicalURL - Canonical URL for the page
 */
import { siteConfig } from '../config';

interface Props {
  title: string;
  description?: string;
  type?: 'website' | 'article' | 'profile';
  image?: string;
  publishDate?: Date;
  updatedDate?: Date;
  canonicalURL?: string;
}

const {
  title,
  description = siteConfig.description,
  type = 'website',
  image,
  publishDate,
  updatedDate,
  canonicalURL,
} = Astro.props;

// Get the current URL from Astro
const currentURL = canonicalURL || Astro.url.href;

// Get site URL from config
const siteURL = siteConfig.url.endsWith('/') ? siteConfig.url : `${siteConfig.url}/`;

// Default image if none provided
const defaultImage = `${siteURL}og-image.png`;
const ogImage = image || defaultImage;

// Ensure image is absolute URL
const absoluteImageURL = ogImage.startsWith('http') ? ogImage : `${siteURL}${ogImage.replace(/^\//, '')}`;

// Get Twitter handle from config (extract username from URL)
const twitterHandle = siteConfig.social.twitter 
  ? `@${siteConfig.social.twitter.split('/').pop()}`
  : undefined;
---

<!-- Standard Meta Tags -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={currentURL} />

<!-- Open Graph Tags -->
<meta property="og:type" content={type} />
<meta property="og:url" content={currentURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={absoluteImageURL} />
<meta property="og:site_name" content={siteConfig.title} />

<!-- Article-specific Open Graph tags -->
{type === 'article' && publishDate && (
  <>
    <meta property="article:published_time" content={publishDate.toISOString()} />
    {updatedDate && (
      <meta property="article:modified_time" content={updatedDate.toISOString()} />
    )}
  </>
)}

<!-- Twitter Card Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={currentURL} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={absoluteImageURL} />
{twitterHandle && <meta name="twitter:site" content={twitterHandle} />}
{twitterHandle && <meta name="twitter:creator" content={twitterHandle} />}

<!-- Author -->
<meta name="author" content={siteConfig.author.name} />

<!-- Page Title -->
<title>{title}</title>
