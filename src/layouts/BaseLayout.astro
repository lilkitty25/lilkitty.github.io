---
/**
 * BaseLayout
 * 
 * Foundation layout component that provides the core HTML structure, meta tags,
 * navigation, footer, and global styles for all pages. All other layouts extend
 * this base layout to ensure consistent site-wide structure.
 * 
 * Features:
 * - HTML document structure with proper meta tags
 * - Favicon and manifest configuration
 * - Theme system with dark/light mode support
 * - Prevents flash of wrong theme on page load
 * - Astro View Transitions support with theme persistence
 * - Sticky navigation header
 * - Global CSS imports (global, typography, utilities)
 * - Responsive layout structure
 * 
 * @component
 * 
 * @example
 * ```astro
 * ---
 * import BaseLayout from '../layouts/BaseLayout.astro';
 * ---
 * 
 * <BaseLayout 
 *   title="About Me" 
 *   description="Learn more about my background and experience"
 * >
 *   <div>Page content goes here</div>
 * </BaseLayout>
 * ```
 */

import { ClientRouter } from 'astro:transitions';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { siteConfig } from '../config';
import '../styles/global.css';
import '../styles/typography.css';
import '../styles/utilities.css';

interface Props {
  /** Page title (will be suffixed with author name) */
  title: string;
  
  /** Optional page description for meta tag */
  description?: string;
}

const { title, description } = Astro.props;

/**
 * Generates the full site title with author name suffix
 * 
 * Format: "{title} | {author.name}" or falls back to siteConfig.title
 */
const siteTitle = title ? `${title} | ${siteConfig.author.name}` : siteConfig.title;
---

<!DOCTYPE html>
<html lang={siteConfig.language} data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    {description && <meta name="description" content={description} />}
    
    <title>{siteTitle}</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#0a0a0a" />
    
    <ClientRouter />
    
    <!-- Prevent flash of wrong theme -->
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        const theme = stored || (window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark');
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
    
    <!-- Preserve theme during View Transitions -->
    <script is:inline>
      document.addEventListener('astro:before-swap', (e) => {
        const theme = document.documentElement.getAttribute('data-theme');
        e.newDocument.documentElement.setAttribute('data-theme', theme);
      });
    </script>
    
    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      
      main {
        flex: 1;
      }
      
      .site-header {
        position: sticky;
        top: 0;
        z-index: 100;
      }
    </style>
  </head>
  <body>
    <header class="site-header" transition:persist>
      <Navigation />
    </header>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
